\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{CDOSR_Bibliography}[2025/03/11 v1.0 CanSat Bibliography Styles]

\RequirePackage[backend=biber,style=ieee,sorting=none,style=numeri]{biblatex}


%% ============================================================================
%% BIBLIOGRAPHY CONFIGURATION
%% ============================================================================

% Custom citation style
\renewcommand{\cite}[1]{\textsuperscript{\autocite{#1}}}

% Configure bibliography appearance
\defbibheading{bibliography}[\refname]{%
  \section*{#1}%
  \markboth{#1}{#1}%
}

% Set bibliography font size
\renewcommand*{\bibfont}

% Custom IEEE-style formatting tweaks
\DeclareFieldFormat{journaltitle}{\textit{#1}}
\DeclareFieldFormat{title}{\textquote{#1}}